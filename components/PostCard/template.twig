<article>
	<ResponsiveImage
		class="aspect-square object-cover object-center rounded-xs"
		:image="post.featured_image"
		alt=""
	/>
	<div class="mt-3">
		<h2 class="h4">{{ post.post_title }}</h2>
		<p class="mt-2 text-gray-500 text-sm max-w-lg">{{ post.post_excerpt }}</p>
		<Button class="mt-4" variant="secondary" size="sm" :href="post.permalink">
			<span aria-hidden="true">Read More</span>
			<span class="sr-only">Read full {{ post.post_title }} post</span>
		</Button>
	</div>
</article>