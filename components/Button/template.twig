{% set tagName = href ? 'a' : 'button' %}

<{{ tagName }}
	class="btn {{ class }}"
	data-variant="{{ variant }}"
	data-size="{{ size }}"
	data-icon-position="{{ iconPosition }}"
	data-has-icon="{{ icon ? 'true' : 'false' }}"
	href="{{ href }}"
	type="{{ type }}"
	{{ attributes | raw }}
>
	{% if icon %}
		<Icon :name="icon" class="w-5 h-5" />
	{% endif %}
	{{ children | raw }}
</{{ tagName }}>