{% set tag_name = href ? 'a' : 'button' %}

<{{ tag_name }}
	class="btn {{ class }}"
	data-variant="{{ variant ?? 'primary' }}"
	data-size="{{ size ?? 'md' }}"
	data-icon-position="{{ iconPosition ?? 'end' }}"
	data-has-icon="{{ icon ? 'true' : 'false' }}"
	href="{{ href }}"
	type="{{ type }}"
>
	{% if icon %}
		<Icon :name="icon" class="w-5 h-5" />
	{% endif %}
	{{ children }}
</{{ tag_name }}>